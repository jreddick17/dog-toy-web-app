<%- include('../partials/header.ejs') %>
<div class="home-body">
    <div class="account-creation-container">
        <div class="account-creation-header">
            <h1>Welcome to Our Community!</h1>
            <p>Join us by creating your account. Fill out the form below to get started.</p>
        </div>
        <form action="/users" method="POST" class="account-creation-form">
            <div class="form-field">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-field">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            <div class="form-field">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-field">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required>
            </div>
            <button type="submit">Create Account</button>
        </form>
    </div>
</div>
<%- include('../partials/footer.ejs') %>